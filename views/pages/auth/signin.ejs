<%- include('../../partials/head.ejs') %>
</head>
<body>
<%- include('../../partials/navigation.ejs') %>
<main class="d-flex">
    <div class="d-flex justify-content-center align-items-center flex-column w-100 p-3">
        <% if (errorMessage) { %>
            <div class="form-group text-danger"><%= errorMessage %></div>
        <% } %>
        <form class="w-25" action="/signIn" method="post">
            <div class="form-group">
                <input name="email" type="email" class="form-control" id="signIn_email" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" id="signIn_password" placeholder="Password">
            </div>

            <div class="d-flex justify-content-center w-100">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary btn-block mb-4 w-50">Sign in</button>
            </div>

            <div class="text-center">
                <p>Not a member? <a href="/auth/signup">Register</a></p>
            </div>
        </form>
    </div>
</main>
<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/end.ejs') %>
